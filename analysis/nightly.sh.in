#!/bin/bash
wd='@CMAKE_SOURCE_DIR@/bin'

if [ "$1" == "" ]; then
  y=`date -d yesterday +%Y-%m-%d`
else
  y=$1
fi

tsd='@PICKLES_DIR@'
od=${wd}/nightlies/${y}

if [ ! -d $od ]; then
    mkdir -p $od
else
    echo "$od already exists"
fi

export PYTHONUNBUFFERED=yes
export PYTHONPATH='@CMAKE_SOURCE_DIR@/lib':${PYTHONPATH}
cd ${od}
${wd}/nightly.py -p 2 ${tsd}/${y} > ${od}/${y}.log 2>&1

